/* componnent/WaterFallView/waterfallcomponnent.wxss */
.fall-container {
  width: 100%;
  display: flex;
  flex: row;
  justify-content: space-between;
  flex-wrap:wrap;
}

.fall-left {
  display: flex;
  flex-direction: column;
  width: 48%;
}

.fall-right {
  display: flex;
  flex-direction: column;
  width: 48%;
}

.item-content{
  margin-top:20rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
  border: 1rpx solid #bebaba;
}

.item-img{
  width: 100%;
}

.item-name{
  width: 100%;
  height: 80rpx;
  text-align: center;
}

.item-bottom{
  width: 100%;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.item-bottom-price{
  height: 100%;
  font-size: 25rpx;
}

.item-bottom-distance{
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  font-size: 25rpx;
}

.item-bottom-distance-img{
  height: 100%;
  width: 40rpx;
}

.item-bottom-distance-distance{
  height: 100%;
}
