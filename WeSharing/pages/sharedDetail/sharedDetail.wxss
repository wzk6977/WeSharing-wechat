/* pages/sharedDetail/sharedDetail.wxss */
Page{
  height: 100%;
  width: 100%;
  background-color: #f8f8f8; 
  position: relative;
}

.scroll{
  height: 100%;
}

/* 隐藏scroll-view滑动条 */
::-webkit-scrollbar
{
width: 0;
height: 0;
color:transparent;
}

.content{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 100rpx;
}

.head{
  width: 90%;
  height: 150rpx;
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.head-left{
  height: 100%;
  width:50%;
  display: flex;
  align-items: center;
}

.sharer-image{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
}

.name-and-time{
  display: flex;
  height: 70%;
  margin-left: 20rpx;
  flex-direction: column;
  justify-content: space-between;
}

.head-name{
  font-size: 40rpx;
}

.head-time{
  font-size: 30rpx;
  color: #9e9797;
}

.head-right{
  height: 70%;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: flex-end;
}

.page-views,.intention{
  font-size: 30rpx;
  color: #9e9797;
}

.swiper-content{
  width: 90%;
  height: 400rpx;
  margin-top: 20rpx;
  position: relative;
}

.swiper{
  width: 100%;
  height: 100%;
}

.swiper-item,.swiper-item-img{
  width: 100%;
  height: 100%;
}

.item-num{
  width: 60rpx;
  height: 35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 15rpx;
  bottom: 15rpx;
  background-color: #cfcbcb;
  color: #fdfdfd;
  border-radius: 20rpx;
  font-size: 25rpx;
  z-index: 10;
}

.sharedname-distance-price{
  width: 90%;
  height: 90rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sharedname{
  font-size: 40rpx;
}

.distance-price{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-end;
}

.distance,.price{
  font-size: 30rpx;
  color: #9e9797;
}

.shared-detail{
  width: 90%;
  display: flex;
  flex-direction: column;
  margin-top: 5rpx;
}

.detail-content{
  width: 100%;
}

.detail-text{
  font-size: 32rpx;
  color: rgb(109, 106, 106);
  display: -webkit-box;
  -webkit-box-orient:vertical;
  text-overflow: ellipsis;
  overflow:hidden; 
  /*  通过以上四行实现收缩功能 */
}

.ellipsis{
  -webkit-line-clamp:3; 
  /* // 最多显示3行 */
   /* // 透明度75% */
}
.unellipsis{
  -webkit-line-clamp:0; 
  /* // 全部显示 */
  /* // 不透明 */
}

.show-and-hidden{
  display: flex;
  justify-content: flex-end;
  margin-top: 5rpx;
}

.show-and-hidden-text{
  font-size: 30rpx;
  color: #416dca;
}

.dividing-line{
  width: 90%;
  height: 3rpx;
  background-color: #c5c2c2;
  margin-top: 35rpx;
  border-radius: 30%;
}

.comment{
  width: 86%;
  display: flex;
  flex-direction: column;
}

.comment-number{
  width: 100%;
  height: 50rpx;
  display: flex;
  margin-top: 10rpx;
  align-items: flex-end;
}

.comment-number-text{
  font-size: 30rpx;
}

.comment-number-count{
  font-size: 20rpx;
  margin-left: 5rpx;
}

.comment-my{
  width: 100%;
  margin-top: 10rpx;
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.userinfo-text{
  font-size: 10rpx;
}

.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.comment-input-content{
  position: relative;
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.comment-input{
  width: 95%;
  height: 60rpx;
  border-radius: 30rpx;
  padding-left: 10rpx;
  padding-right: 100rpx;
  font-size: 30rpx;
  background-color: #e9e7e7;
}

.comment-input-send{
  position: absolute;
  right: 10rpx;
  width: 80rpx;
  height: 45rpx;
  padding: 0rpx;
  line-height: 45rpx;
  font-size: 20rpx;
  border-radius: 30rpx;
  background-color: #2f24c4;
  color: #ffffff;
}

.comment-input-send::after{
  border: none;
}

.comment-other{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.comment-other-content{
  width: 100%;
  display: flex;
  flex-direction: row;
  /* align-items: center; */
}

.avatar-content{
  display: flex;
  flex-direction: column;
  width: 18%;
  /* height: 100%; */
}
.comment-other-text{
  width: 62%;
  font-size: 30rpx;
}

.time-content{
  width: 20%;
  /* height: inherit; */
  display: flex;
  flex-direction: column-reverse;
  /* justify-content: flex-end; */
  align-items: flex-end;
}

.comment-other-time{
  font-size: 20rpx;
  color: #9e9797;
}

.check-more{
  width: 100%;
  height: 50rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.check-more-content{
  display: flex;
  justify-content: center;
  align-items: center;
}

.check-more-text{
  font-size: 20rpx;
  color: #416dca;
}

.check-more-img{
  margin-top: 5rpx;
  margin-left: 5rpx;
  width: 20rpx;
  height: 12rpx;
  color: #416dca;
}

.robsofa-content{
  width: 100%;
  display: flex;
  justify-content: center;
}

.robsofa{
  width: 250rpx;
  height: 250rpx;
}

.contact{
  width: 100%;
  height: 100rpx;
  position: absolute;
  bottom: 0rpx;
  background-color: #f8f8f8; 
  display: flex;
  justify-content: center;
  align-items: center;
}

.contact-btn{
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  border-radius: 30rpx;
  background-color: #2f24c4;
  color: #ffffff;
}