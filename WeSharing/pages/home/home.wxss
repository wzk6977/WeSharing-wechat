Page {
  height: 100%;
}

.swiper-tab{
   width: 100%;
   height: 5%;
   display: flex;
   flex-direction: row;
   justify-content:space-around;
   z-index: 5;
   border-bottom: 5rpx solid #F4F4F4;
}
.swiper-tab-list{
  width:200rpx;
  margin: 0 20rpx;
  padding: 0 20rpx;
  text-align: center;
  font-size: 35rpx;
  font-family:Helvetica, Tahoma, Arial, "PingFang SC", "Hiragino Sans GB", "Heiti SC", STXihei, "Microsoft YaHei", SimHei, "WenQuanYi Micro Hei"; 
}
.active{
   color:rgb(5, 5, 5);
   border-bottom: 1px solid #080808;
   }


.swiper{
  width: 100%;
  height: 94.5%;
}

.swiper-item{
  width: 100%;
  height: 100%;
}


.scroll-view{
  width: 96%;
  display: flex;
  justify-content: center;
  /* overflow: auto; */
